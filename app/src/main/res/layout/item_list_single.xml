<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_90sdp"
    android:layout_marginTop="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:elevation="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_15sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/image"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:src="@color/app_color"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_toLeftOf="@id/btn_download"
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Create a landing pageusing HTML..."
                            android:textSize="@dimen/_15ssp"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:layout_marginStart="10dp"/>

                        <ImageView
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:id="@+id/btn_download"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:src="@drawable/download"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentEnd="true"
                            app:tint="@color/grey" />
                    </RelativeLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:layout_toLeftOf="@id/code_number"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jack Greelish"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/grey"
                        android:layout_marginStart="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/code_number"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ISBN: 98028"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/grey_light"
                        android:layout_marginEnd="@dimen/_10sdp"/>
                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>